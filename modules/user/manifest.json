{
	"name": "Users",
	"slug": "users",
	"collection": "user",

	"permissions": [
		{
			"key": "view",
			"description": "View existing users"
		},
		{
			"key": "create",
			"description": "Create new users"
		},
		{
			"key": "update",
			"description": "Update existing users"
		},
		{
			"key": "delete",
			"description": "Remove users"
		}
	],

	"form": {
		"tabs": [
			{
				"objects": [
					"email",
					"password",
					"roles",
					"superadmin"
				]
			}
		],

		"fields": {
			"email": {
				"type": "email",
				"label": "E-mail",
				"required": true,
				"unique": true
			},
			"password": {
				"type": "password",
				"label": "Password",
				"required": true
			},
			"roles": {
				"type": "api_multi_option",
				"style": "checkbox",
				"label": "Roles",
				"endpoint": "/roles/",
				"valueField": "_id",
				"labelField": "name"
			},
			"superadmin": {
				"type": "boolean",
				"label": "Super admin",
				"default": false,
				"hidden": true
			}
		}
	},

	"listSpec": {
		"fields": [
			{
				"name": "email",
				"label": "E-mail"
			}
		]
	}
}
